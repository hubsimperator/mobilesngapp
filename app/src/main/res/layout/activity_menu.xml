<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:layout_span="@android:integer/config_shortAnimTime">

    <EditText
        android:id="@+id/dateText"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginStart="20sp"
        android:layout_marginLeft="20sp"
        android:layout_marginTop="50sp"
        android:ems="10"
        android:hint="Data" />

    <HorizontalScrollView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginLeft="10dp"
        android:layout_marginTop="200dp"
        android:layout_marginRight="10dp"
        android:scrollbars="none">

        <LinearLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:orientation="horizontal">

            <Button
                android:id="@+id/planDniaButton"
                android:layout_width="250dp"
                android:layout_height="250dp"
                android:text="Plan Dnia" />

            <Button
                android:id="@+id/aktualnePraceButton"
                android:layout_width="250dp"
                android:layout_height="250dp"
                android:text="Aktualne Prace" />

            <Button
                android:id="@+id/zakonczonePraceButton"
                android:layout_width="250dp"
                android:layout_height="250dp"
                android:text="ZakoÅ„czone Prace" />

            <Button
                android:id="@+id/brygadaButton"
                android:layout_width="250dp"
                android:layout_height="250dp"
                android:text="Brygada" />

        </LinearLayout>

    </HorizontalScrollView>

</RelativeLayout>